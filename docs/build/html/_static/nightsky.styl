// increase space above toctrees
.toctree-wrapper
    margin-top: 2em

// reduce spacing between list items that contain paragraphs
li
    p:first-child
        margin-top: 0
    
    p:last-child
        margin-bottom: 0

li + li
.toctree-wrapper + ul
    margin-top: 0.3em


// increase spacing between lines
.body p
    line-height: 1.3em


// section permalinks
.toctree-wrapper a.headerlink
    display: none


// blockquotes
blockquote
    padding-left: 0.5em


// notes, warnings, etc
admonition(color)
    border-color: color
    background: alpha(color, 20%)

.admonition
    border: thin solid
    padding: 0.5em
    
    .admonition-title
        margin-top: 0
        
        &::after
            content: ":"
        
        display: inline
        & + p
            display: inline
    
    & *:last-child
        margin-bottom: 0
    
    &.note
        admonition(#62629b)


// rubrics, usually used for footnotes
.rubric
    font-size: 1.3em
    margin-top: 2em


// footnote markers
.footnote-reference
    font-size: 0.6em
    text-align: start
    vertical-align: super
    

// footnote listing
dl.footnote
    display: grid
    grid-template-columns: max-content auto
    
    dt
        grid-column: 1
    
    
    dd
        grid-column: 2
        
        margin-left: 1em
        
        p
            margin-top: 0

// section headings
h1
    margin-bottom: 1.5em

// permalinks
h1
    a.headerlink
        display: none

h2
h3
h4
h5
dl dt
    a.headerlink
        margin-left: 0.3em
        text-decoration: none

    &:not(:hover)
        a.headerlink
            display: none

// === class/function definitions ===

.section
    // increase spacing between definitions
    dl + dl
        margin-top: 2em
    
    // add an overline for clear separation between two definitions
    & > dl > dt
        border-top: thin dotted var(--border_color)
        padding-top: 0.3em
    
    // make class/function names bold
    code.sig-name
        font-weight: bold
    
    // highlight class/function definitions' and their sub-sections' headers
    dl.class > dt
        background: #342a37
        
    dl.method > dt
        background: #302a30
        
    dl.field-list > dt
        background: #2e2a2f
    
    // adjust spacing between parameters, etc
    dl.field-list
        dt
            margin-top: 0.5em
    
        dd
            & > p:first-child
                margin-top: 0.5em
            
            & > p:last-child
                margin-bottom: 0.5em
